@model RPG_MVC.Models.Arma

@{

}


<h4>Modificar Jogador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModificadoArma">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArmaId" class="control-label"></label>
                <input asp-for="ArmaId" class="form-control-plaintext" readonly />
                <span asp-validation-for="ArmaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ataque" class="control-label"></label>
                <input asp-for="Ataque" class="form-control" />
                <span asp-validation-for="Ataque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar Arma" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
