@model RPG_MVC.Models.Inimigo

@{

}


<h4>Cadastrar Jogador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdicionandoInimigo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HpMax" class="control-label"></label>
                <input asp-for="HpMax" class="form-control" />
                <span asp-validation-for="HpMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MpMax" class="control-label"></label>
                <input asp-for="MpMax" class="form-control" />
                <span asp-validation-for="MpMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Forca" class="control-label"></label>
                <input asp-for="Forca" class="form-control" />
                <span asp-validation-for="Forca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Defesa" class="control-label"></label>
                <input asp-for="Defesa" class="form-control" />
                <span asp-validation-for="Defesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experiencia" class="control-label"></label>
                <input asp-for="Experiencia" class="form-control" />
                <span asp-validation-for="Experiencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moedas" class="control-label"></label>
                <input asp-for="Moedas" class="form-control" />
                <span asp-validation-for="Moedas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar Arma" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>